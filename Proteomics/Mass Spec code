  if(CELL_META$sector.numeric.index == 7) { # the last sector
    cn = colnames(dff)
    n = length(cn)
    circos.text(rep(CELL_META$cell.xlim[1], n) + convert_x(1, "mm"), 
                n - 1:n + 0.5, cn, 
                cex = 1, adj = c(0, 0.5), facing = "inside")
  }
}, bg.border = NA)
grid.draw(lgd)

